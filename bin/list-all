#!/usr/bin/env bash

releases_path="https://github.com/opensearch-project/opensearch-cli/releases"
cmd="curl -s"
if [ -n "$OAUTH_TOKEN" ]; then
  cmd="$cmd -H 'Authorization: token $OAUTH_TOKEN'"
fi
cmd="$cmd $releases_path"

function sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' |
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

# Fetch all releases and sort them
versions=$(eval "$cmd" | grep -ioE "Version.+Release Notes" | cut -d " " -f2 | sort_versions)
echo "$versions"
